
<!-- Defines the starting window and holds application wide resources -->    
<Application x:Class="LocalPasswordGenerator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LocalPasswordGenerator"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <LinearGradientBrush x:Key="GradientMainBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#595959" Offset="0"/>
            <GradientStop Color="#7d7d7d" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="GradientButton" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#8B0000" Offset="0"/>
            <GradientStop Color="#B22222" Offset="1"/>
        </LinearGradientBrush>
        
        <Style TargetType="Button"
               x:Key="GenerateButtonStyle">
            <Setter Property="Background" Value="{StaticResource GradientButton}"/>
            <Setter Property="Foreground" Value="#a3a3a3"/>
            <Setter Property="FontWeight" Value="ExtraBold"/>
        </Style>

        
    </Application.Resources>

</Application>
